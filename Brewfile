# .Brewfile
# Install with: brew bundle --file ~/.config/.Brewfile
#
# Core development tools
brew "neovim", args: ["HEAD"]     # nightly build
brew "wezterm", args: ["HEAD"]    # nightly build (scrolling bug fix)
brew "go"

# LSP servers
brew "gopls"                      # Go LSP
brew "lua-language-server"        # Lua LSP

# Treesitter dependencies
brew "tree-sitter"                # For nvim-treesitter

# Essential CLI tools
brew "git"
brew "ripgrep"                    # rg - fast grep

# Optional but useful
brew "jq"                         # JSON processor
brew "curl"